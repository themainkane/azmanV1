{
  "compilerOptions": {
    "rootDir": "./server/src",
    "outDir": "./dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "ts-node": {
        "esm": true
    },
    "include": ["./server/src/**/*"],
    "exclude": ["node_modules"]
}