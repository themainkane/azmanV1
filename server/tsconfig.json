{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
}
